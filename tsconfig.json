{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["DOM", "ES2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noLib": false,
    "noUnusedLocals": true,
    "outDir": "build",
    "plugins": [
      {
        "alwaysShowRuleFailuresAsWarnings": false,
        "configFile": "./tslint.json",
        "disableNoUnusedVariableRule": false,
        "ignoreDefinitionFiles": false,
        "name": "tslint-language-service"
      }
    ],
    "pretty": true,
    "removeComments": true,
    "rootDirs": [
      "./src"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
